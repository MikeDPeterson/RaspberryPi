        <TextBlock x:ConnectionId='5' Name="lbDebug" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="4" Grid.Row="0" Foreground="Beige" FontSize="18" FontFamily="Consolas">
            1
