        <TextBlock x:ConnectionId='2' x:Name="tbTemp1" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="78.12 F" FontSize="36" Foreground="Tomato" HorizontalAlignment="Center" VerticalAlignment="Center"/>
